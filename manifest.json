{

	"description": "Store JS scripts to be run for a given site",
	"manifest_version": 2,
	"name": "jsloader",
	"version": "1.0",
	
	"applications": {
		"gecko": {
			"id": "{7c7674e3-ec49-472b-8bab-5c981aa3cc94}",
			"strict_min_version": "42.0"
		}
    },
	
	"background": {
		"scripts": [
			"utils/deps/async.min.js",
			"utils/deps/underscore-min.js",
			"utils/deps/async.min.js",
			"utils/jsloader-utils.js",
			"bg/data_model.js",
			"bg/persistence.js",
			"bg/tab_mgr.js",
			"bg/editor_mgr.js",
			"bg/cache_mgr.js",
			"bg/domain_mgr.js",
			"bg/option_mgr.js",
			"bg/group_mgr.js",
			"bg/background.js"]
	},

	"browser_action": {
		"browser_style": true,
		"default_icon": {
			"16": "fg/icons/Diskette_16.png",
			"32": "fg/icons/Diskette_32.png"
		},

		"default_popup": "fg/browser_action/ba.html"
	},

	"page_action": {
		"browser_style": true,
		"default_icon": {
			"16": "fg/icons/Diskette_16.png",
			"32": "fg/icons/Diskette_32.png"
		},
		
		"default_popup": "fg/page_action/pa.html"
	},

	"content_scripts": [
		{
			"matches": ["*://*/*", "<all_urls>"],
			"js": ["fg/deps/jquery.min.js", "bg/content_script.js"],
			"all_frames": true,
			"run_at": "document_start"
		}
	],
	
	"options_ui": {
		"browser_style": true,
		"open_in_tab": true,
		"page": "fg/opt_page/options.html"
	},

	"commands": {
		"add-script-for-tab": {
			"suggested_key": {
				"linux": "Alt+Shift+1"
			},
			"description": "Open a new editor window, binded to the current tab."
		},
		"add-site-to-group": {
			"suggested_key": {
				"linux": "Alt+Shift+2"
			},
			"description": "Adds site to existing group."
		},
		"new-group-new-script": {
			"suggested_key": {
				"linux": "Alt+Shift+3"
			},
			"description": "Create new group, Â¿adds the current site? and bind a new script."
		}

		
	},

	"content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self';",
	
	"permissions": [ "storage", "tabs", "cookies", "notifications", "<all_urls>", "downloads" ]
	
}
