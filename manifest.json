{

	"description": "Store JS scripts to be run for a given site",
	"manifest_version": 2,
	"name": "jsloader",
	"version": "1.0",
	
	"applications": {
		"gecko": {
			"id": "{b02f8ca1-701c-48ad-bb21-3631bf946736}",
			"strict_min_version": "42.0"
		}
    },
	
	"background": {
		"scripts": [
			"utils/deps/EventEmitter/EventEmitter.min.js",
			"utils/deps/async.min.js",
			"utils/deps/underscore-min.js",
			"utils/deps/require.js",
			"utils/jsloader-utils.js",
			"bg/data_model.js",
			"bg/persistence.js",
			"bg/editor_mgr.js",
			"bg/cache_mgr.js",
			"bg/domain_mgr.js",
			"bg/option_mgr.js",
			"bg/group_mgr.js",
			"bg/notify_mgr.js",
			"bg/logs_mgr.js",
			"bg/rules_mgr.js",
			"bg/tabs_mgr.js",
			"bg/content_mgr.js",
			"bg/background.js"
		]
	},

	"browser_action": {
		"browser_style": true,
		"default_icon": {
			"16": "fg/icons/Diskette_16.png",
			"32": "fg/icons/Diskette_32.png"
		},
		
		"default_popup": "fg/browser_action/ba.html"
	},

	"page_action": {
		"browser_style": true,
		"default_icon": {
			"16": "fg/icons/Diskette_16.png",
			"32": "fg/icons/Diskette_32.png"
		},
		
		"default_popup": "fg/page_action/pa.html"
	},

	"content_scripts": [
		{
			"matches": ["*://*/*", "<all_urls>"],
			"js": [
				"fg/deps/jquery.min.js",
				"utils/deps/async.min.js",
				"utils/deps/underscore-min.js",
				"utils/jsloader-utils.js",
				"bg/content_api.js",
				"utils/deps/EventEmitter/EventEmitter.min.js",
				"bg/content_script.js"
			],
			
			"all_frames": true,
			"run_at": "document_start"
		}
	],
	
	"options_ui": {
		"browser_style": true,
		"open_in_tab": true,
		"page": "fg/opt_page/options.html"
	},
	
	"commands": {
		"add-script-for-tab": {
			"suggested_key": {
				"linux": "Alt+Shift+1"
			},
			"description": "Open a new editor window, binded to the current tab."
		},
		"add-site-to-group": {
			"suggested_key": {
				"linux": "Alt+Shift+2"
			},
			"description": "Adds site to existing group."
		},
		"new-group-new-script": {
			"suggested_key": {
				"linux": "Alt+Shift+3"
			},
			"description": "Create new group, Â¿adds the current site? and binds a new script."
		},
		"listen-request-for-tab": {
			"suggested_key": {
				"linux": "Alt+Shift+4"
			},
			"description": "Listen and prints request for the current tab."
		}
	},

	"content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self';",
	
	"permissions": [ "storage", "tabs", "cookies", "notifications", "<all_urls>", "downloads", "contextMenus", "activeTab", "webRequest", "webRequestBlocking", "proxy" ]
	
}
