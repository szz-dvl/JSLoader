{

	"description": "Store JS scripts to be run for a given site",
	"manifest_version": 2,
	"name": "jsloader",
	"version": "1.0",

	"applications": {
		"gecko": {
			"id": "jsloader@something.com",
			"strict_min_version": "29.0a1",
			"strict_max_version": "55.*",
			"update_url": "https://example.com/updates.json"
		}
    },
	
	"background": {
		"scripts": ["deps/async.min.js", "persistence.js", "background.js"]
	},

	"browser_action": {
		"browser_style": true,
		"default_icon": {
			"16": "icons/Diskette_16.png",
			"32": "icons/Diskette_32.png"
		},

		"default_popup": "menu/menu.html"
	},

	"content_scripts": [
		{
			"matches": ["*://*/*"],
			"js": ["deps/jquery.min.js", "match.js"]
		}
	],

	"page_action": {
		"browser_style": true,
		"default_icon": {
			"16": "icons/Diskette_16.png",
			"32": "icons/Diskette_32.png"
		},
		
		"default_popup": "edit/edit.html"
	},
	
	"options_ui": {
		"browser_style": true,
		"open_in_tab": true,
		"page": "opt/options.html"
	},

	"commands": {
		"show-editor": {
			"suggested_key": {
				"linux": "Alt+Shift+1"
			},
			"description": "Open a new editor window, binded to the current tab."
		}
	},

	"content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self';",

	"permissions": ["storage", "tabs"]

}
