{

	"description": "Store JS scripts to be run for a given site",
	"manifest_version": 2,
	"name": "jsloader",
	"version": "1.0",

	"applications": {
		"gecko": {
			"id": "jsloader@something.com",
			"strict_min_version": "29.0a1",
			"strict_max_version": "55.*",
			"update_url": "https://example.com/updates.json"
		}
    },
	
	"background": {
		"scripts": [
			"bg/deps/async.min.js",
			"bg/model.js",
			"bg/persistence.js",
			"bg/tab_mgr.js",
			"bg/editor_mgr.js",
			"bg/domain_mgr.js",
			"bg/option_mgr.js",
			"bg/background.js"]
	},

	"browser_action": {
		"browser_style": true,
		"default_icon": {
			"16": "icons/Diskette_16.png",
			"32": "icons/Diskette_32.png"
		},

		"default_popup": "menu/menu.html"
	},

	"content_scripts": [
		{
			"matches": ["*://*/*"],
			"js": ["fg/deps/jquery.min.js", "fg/content_script.js"]
		}
	],

	"page_action": {
		"browser_style": true,
		"default_icon": {
			"16": "fg/icons/Diskette_16.png",
			"32": "fg/icons/Diskette_32.png"
		},
		
		"default_popup": "fg/page_action/pa.html"
	},
	
	"options_ui": {
		"browser_style": true,
		"open_in_tab": true,
		"page": "fg/opt_page/options.html"
	},

	"commands": {
		"show-editor": {
			"suggested_key": {
				"linux": "Alt+Shift+1"
			},
			"description": "Open a new editor window, binded to the current tab."
		}
	},

	"content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self';",

	"permissions": ["storage", "tabs"]

}
